<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mining.crypto.mapper.UserBenefitsMapper">

    <sql id="selectUserBenefits">
        SELECT u.*
        FROM user_benefit u
    </sql>

    <select id="selectAllUserBenefitsPage" resultType="UserBenefit">
        <include refid="selectUserBenefits"/>
        <where>
            u.del = 0
            <if test="name != null and name != ''">
                AND u.user_name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY u.create_date DESC
    </select>

</mapper>