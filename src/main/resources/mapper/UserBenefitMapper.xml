<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mining.crypto.mapper.UserBenefitMapper">

    <resultMap id="sumResultMap" type="map">
        <result column="userName"      property="userName"/>
        <result column="sumDailyReturn" property="sumDailyReturn"/>
    </resultMap>

    <sql id="selectUserBenefits">
        SELECT u.*
        FROM user_benefit u
    </sql>

    <select id="selectAllUserBenefitsPage" resultType="UserBenefit">
        <include refid="selectUserBenefits"/>
        <where>
            u.del = 0
            <if test="user_name != null and user_name != ''">
                AND u.user_name LIKE CONCAT('%', #{user_name}, '%')
            </if>
        </where>
        ORDER BY u.create_date DESC
    </select>

    <select id="sumDailyReturnByDate" resultMap="sumResultMap">
        SELECT user_name AS userName,
               SUM(daily_average_return) AS sumDailyReturn
        FROM user_benefit
        WHERE del = 0
          AND DATE_FORMAT(modify_date, '%Y-%m-%d') = #{date}
        GROUP BY user_name
    </select>

</mapper>