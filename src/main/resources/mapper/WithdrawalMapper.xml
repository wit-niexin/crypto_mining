<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mining.crypto.mapper.WithdrawalMapper">

    <sql id="selectWithdrawals">
        SELECT w.*
        FROM withdrawal w
    </sql>

    <select id="selectAllWithdrawalsPage" resultType="Withdrawal">
        <include refid="selectWithdrawals"/>
        <where>
            w.del = 0
            <if test="name != null and name != ''">
                AND w.user_name =#{name}
            </if>
            <if test="status != null">
                AND w.status = #{status}
            </if>
        </where>
        ORDER BY w.create_date DESC
    </select>
</mapper>